import lejos.hardware.motor.Motor;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

import static org.junit.jupiter.api.Assertions.*;

public class TestPince {

    private Pince pince;

    // Initialisation de la pince avant chaque test
   
    public void setUp() {
        // Création de la pince avec le moteur réel
        pince = new Pince(); // Utilisation de Motor.D (votre moteur réel)
    }

    // Test pour fermer la pince
    public void testFermerPince() {
        // Appel de la méthode fermerPince
        pince.fermerPince();

        // Ici, vous ne pouvez pas vérifier directement l'état sans un capteur, mais vous pouvez
        // afficher un message pour observer si la méthode est exécutée correctement
        System.out.println("Pince fermée");
    }

    // Test pour ouvrir la pince

    public void testOuvrirPince() {
        // Appel de la méthode ouvrirPince
        pince.ouvrirPince();

        // Comme pour le test précédent, vous ne pouvez pas vérifier l'état sans un capteur, 
        // mais vous pouvez afficher un message
        System.out.println("Pince ouverte");
    }
}


