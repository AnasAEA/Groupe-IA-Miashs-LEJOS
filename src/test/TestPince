import lejos.hardware.motor.NXTRegulatedMotor;
import lejos.hardware.motor.Motor;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class TestPince {

    private Pince pince;

    // Cette méthode est appelée avant chaque test pour initialiser la pince

    public void setUp() {
        // Initialisation de l'objet Pince, avec un moteur réel
        pince = new Pince(); // La pince utilise le moteur réel (Motor.D)
    }

    // Test de la méthode fermerPince
   
    public void testFermerPince() {
        pince.fermerPince();

        // On peut vérifier si la pince est bien fermée
        // Vous pouvez ajouter une méthode pour obtenir l'état de la pince si nécessaire
        System.out.println("Pince fermée");
        // Exemple d'assertion si vous avez une méthode pour vérifier l'état de la pince
        // assertFalse(pince.isOpen());  // A définir dans la classe Pince
    }

    // Test de la méthode ouvrirPince
    public void testOuvrirPince() {
        pince.ouvrirPince();

        // On peut vérifier si la pince est bien ouverte
        System.out.println("Pince ouverte");
        // Exemple d'assertion si vous avez une méthode pour vérifier l'état de la pince
        // assertTrue(pince.isOpen());  // A définir dans la classe Pince
    }
}

