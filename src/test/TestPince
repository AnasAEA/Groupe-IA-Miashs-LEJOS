public class TestPince {

    private Pince pince;
    private NXTRegulatedMotor motorMock;

    public void setUp() {
        // Création du moteur simulé (mock)
        motorMock = mock(NXTRegulatedMotor.class);
        // Création de l'objet Pince et injection du moteur simulé
        pince = new Pince();
        pince.setMotor(motorMock);  // Donne le moteur simulé à la pince
    }

    public void testFermerPince() {
        // Test de la méthode fermerPince
        pince.fermerPince();
        
        // Vérification si la méthode rotate(-850) a bien été appelée
        verify(motorMock, times(1)).rotate(-850);
    }


    public void testOuvrirPince() {
        // Test de la méthode ouvrirPince
        pince.ouvrirPince();
        
        // Vérification si la méthode rotateTo(850) a bien été appelée
        verify(motorMock, times(1)).rotateTo(850);
    }
}
